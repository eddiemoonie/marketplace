<!DOCTYPE html>
<html>
  <head>
    <title>The Sneaker Index</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <header class="navbar navbar-inverse">
      <div class="navbar-class">
        <div class="container">
          <h1>The Sneaker Index</h1>
          <ul class="navbar-nav">
            <% if current_user %>
              <li><%= link_to "Marketplace", products_path %></li>
              <li><%= link_to "Sell", new_product_path %></li>
              <li class="profile"><%= link_to "Dashboard", user_path(current_user) %></li>
              <li class="profile"><%= link_to "Log Out", logout_path, method: :delete%></li>
            <% else %>
              <li class="profile"><%= link_to "Log In", login_path %></li>
              <li class="profile"><%= link_to "Sign Up", new_user_path %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </header>

    <%= yield %>
  </body>
</html>
