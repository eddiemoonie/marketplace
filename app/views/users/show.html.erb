<h1><%= @user.username %></h1>
<p><%= @user.purchases.count if @user.purchases.exists? %></p>

<div class="column-left">
  <h3>On The Market</h3>
  <% @user.products.each do |product| %>
    <% if !product.sold %>
      <div class="">
        <div class="image-container">
          <div class="img">
            <%= image_tag product.image.url(:preview) if product.image.exists? %>
          </div>
        </div>
        <p><%= link_to "#{product.name}", product_path(product) %></p>
        <p><%= product.size %></p>
        <p><%= number_to_currency(product.price, :unit => "$") %></p>
      </div>
    <% end %>
  <% end %>
</div>

<div class="column-center">
  <h3>Sold Products</h3>
  <% @user.products.each do |product| %>
    <% if product.sold %>
      <div class="">
        <div class="image-container">
          <div class="img">
            <%= image_tag product.image.url(:preview) if product.image.exists? %>
          </div>
        </div>
        <p>SOLD TO: <%= link_to "#{product.purchase.user.username}", user_path(product.purchase.user) %></p>
        <p><%= link_to "#{product.name}", product_path(product) %></p>
        <p><%= product.size %></p>
        <p><%= number_to_currency(product.price, :unit => "$") %></p>
      </div>
    <% end %>
  <% end %>
</div>

<div class="column-right">
  <h3>Purchased Products</h3>
  <% @user.purchases.each do |purchase| %>
    <div class="">
      <div class="image-container">
        <div class="img">
          <%= image_tag purchase.product.image.url(:preview) if purchase.product.image.exists? %>
        </div>
      </div>
      <p>Seller: <%= link_to "#{purchase.product.user.username}", user_path(purchase.product.user) %></p>
      <p><%= link_to "#{purchase.product.name}", product_path(purchase.product) %></p>
      <p><%= purchase.product.size %></p>
      <p><%= number_to_currency(purchase.product.price, :unit => "$") %></p>
      <p><%= link_to "Leave a Feedback", new_feedback_path if @user === current_user %></p>
    </div>
  <% end %>
</div>
