<%= form_for @user do |f| %>

  <div class="">
    <%= f.label :username %>
    <br>
    <%= f.text_field :username %>
  </div>

  <div class="">
    <%= f.label :password %>
    <br>
    <%= f.password_field :password %>
  </div>

  <div class="">
    <%= f.label :email %>
    <br>
    <%= f.text_field :email %>
  </div>

  <div class="">
    <%= f.submit %>
  </div>
  
<% end %>
