<br>
<%= form_for @user, :url => url_for(:controller => 'sessions', :action => 'create') do |f| %>

  <div class="">
    <%= f.text_field :username, :placeholder => "Username" %>
  </div>
  <br>
  <div class="">
    <%= f.password_field :password, :placeholder => "Password" %>
  </div>
  <br>
  <div class="">
    <%= f.submit "Sign In" %>
  </div>

<% end %>
