<%= form_for @review do |f| %>

  <div class="">
    <%= f.hidden_field :product_id, :value => params[:product_id] %>
    <%= f.hidden_field :user_id, :value => params[:user_id] %>
  </div>

  <div class="">
    <%= f.label :rating %>
    <br>
    <%= f.select:rating, options_for_select((0..5).step(1)), :prompt => "Select" %>
  </div>

  <div class="">
    <%= f.label :review %>
    <br>
    <%= f.text_area :review %>
  </div>

  <br>

  <div class="">
    <%= f.submit "Submit" %>
  </div>

<% end %>
